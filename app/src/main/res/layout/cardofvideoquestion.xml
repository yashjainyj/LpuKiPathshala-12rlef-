<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.design.card.MaterialCardView
        android:layout_below="@+id/app_bar"
        android:background="@drawable/profile"
        android:layout_width="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/cartdetail"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/q"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer"
                    android:textSize="10dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/typeofquevideo"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    >
                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer"
                    android:id="@+id/questionvideo"
                    android:textStyle="italic"

                    android:layout_below="@+id/typeofquevideo"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >
                </TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/q"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:id="@+id/ppp"
                android:paddingLeft="20dp"

                >
                <ImageView

                    android:id="@+id/profile_imagevideo"
                    android:background="@color/shimmer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/usernamevideo"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:layout_toRightOf="@id/profile_imagevideo"
                    android:background="@color/shimmer"
                    >
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/profile_imagevideo"
                    android:layout_below="@id/usernamevideo"
                    android:paddingLeft="10dp"
                    android:id="@+id/dateofquevideo"
                    android:textColor="#000000"
                    android:background="@color/shimmer"
                    android:textSize="10dp"
                    >
                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:layout_below="@+id/ppp"
                android:id="@+id/rel1"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/Imagetopostvideo"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:background="@color/shimmer"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/Answers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Answers"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:layout_below="@id/Imagetopostvideo"
                    android:textSize="15dp"></TextView>

                <ImageView
                    android:id="@+id/moresnswersvideo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@null"
                    android:src="@drawable/comment"
                    android:layout_below="@id/Answers"></ImageView>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</RelativeLayout>