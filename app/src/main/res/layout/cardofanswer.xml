<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.design.card.MaterialCardView
        android:layout_below="@+id/app_bar"
        android:background="@drawable/profile"
        android:layout_width="match_parent"
        android:outlineSpotShadowColor="@color/common_google_signin_btn_text_light_disabled"
        android:outlineAmbientShadowColor="@color/blue"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/cartdetail"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:id="@+id/ppp"
            android:paddingLeft="20dp"
            >
            <ImageView

                android:id="@+id/answer_profile_image"
                android:src="@drawable/queuser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/answer_user_name"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_toRightOf="@id/answer_profile_image"
                android:text="User name"
                >
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/answer_profile_image"
                android:layout_below="@id/answer_user_name"
                android:paddingLeft="10dp"
                android:id="@+id/answer_dateofque"
                android:textColor="#000000"
                android:text="update date"
                android:textSize="10dp"
                >
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/ppp"
            android:paddingTop="10dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/Answershowimage"
                android:paddingVertical="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/a"
                >
            </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/lin2"
                    android:focusable="true"
                    android:layout_below="@id/Answershowimage"
                    >


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollofans"
>
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/ansshowtext1"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:maxLines="5"
                            android:layout_margin="15dp"
                            android:background="@drawable/profile"
                            android:scrollbars="vertical"
                            android:inputType="textMultiLine"
                            /></ScrollView>
                        <!--<android.support.design.widget.TextInputEditText
                            android:id="@+id/ansshowtext1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:maxLines="1"
                            android:focusableInTouchMode="false"
                            android:cursorVisible="false"
                            />-->
                </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</RelativeLayout>