<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.design.card.MaterialCardView
        android:layout_below="@+id/app_bar"
        android:background="@drawable/profile"
        android:layout_width="match_parent"
        android:outlineSpotShadowColor="@color/common_google_signin_btn_text_light_disabled"
        android:outlineAmbientShadowColor="@color/blue"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/cartdetail"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/Answershowimage"
                android:paddingVertical="5dp"
                android:src="@drawable/a"
                >
            </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/lin2"
                    android:focusable="true"
                    android:layout_below="@id/Answershowimage"
                    >




<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollofans"
>
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/ansshowtext1"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-condensed"
                            android:maxLines="5"
                            android:layout_margin="15dp"
                            android:background="@drawable/profile"
                            android:scrollbars="vertical"
                            android:inputType="textMultiLine"
                            /></ScrollView>
                        <!--<android.support.design.widget.TextInputEditText
                            android:id="@+id/ansshowtext1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:maxLines="1"
                            android:focusableInTouchMode="false"
                            android:cursorVisible="false"
                            />-->
                </LinearLayout>
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</RelativeLayout>